<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
           version="3.1">

    <servlet>
        <servlet-name>sourceServlet</servlet-name>
        <servlet-class>br.com.brunomilitzer.trainings.servlet.session.SourceServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>targetServlet</servlet-name>
        <servlet-class>br.com.brunomilitzer.trainings.servlet.session.TargetServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>sourceServlet</servlet-name>
        <url-pattern>/sourceServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>targetServlet</servlet-name>
        <url-pattern>/targetServlet</url-pattern>
    </servlet-mapping>

</web-app>
